class Block{
  PVector location;
  color col;
  int w;
  int h;
  PVector[] edges;
  
  Block(int x,int y,int wid,int hei,color c){
    location=new PVector(x,y);
    col=c;
    w=wid;
    h=hei;
    edges=new PVector[]{new PVector(x-w,y-h),new PVector(x+w,y-h),new PVector(x+w,y+h),new PVector(x-w,y+h)};
  }
  
  void display(){
    stroke(1);
    fill(col);
    strokeWeight(0);
    rect(location.x,location.y,w,h);
  }
}
