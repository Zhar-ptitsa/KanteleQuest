class Player{
  PVector pos;
  PVector vel;
  PVector acc;
  PVector oldPos;
  
  
  Player(){
    pos=new PVector(width/2,0);
    vel=new PVector(0,0);
    acc=new PVector(0,0);
    oldPos=new PVector(0,0);
  }
  
  void display(){
    fill(#9320F2);
    stroke(#55257C);
    strokeWeight(1);
    rect(pos.x,pos.y,20,20);
  }
  
  void updatePos(){
    oldPos=pos;
    pos.add(vel);
    vel.add(acc);
  }

  void accelerate(PVector input){
    acc.add(input);
  }
  
  void updateVel(PVector input){
    vel=input;
  }
}
